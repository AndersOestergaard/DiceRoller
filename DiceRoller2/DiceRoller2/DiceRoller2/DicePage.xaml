<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller2.DicePage"
             Title="DiceRoller"
             BackgroundColor="#525564"
             >
  <StackLayout Orientation="Vertical" Padding="0,50,0,0">

    <Label x:Name="diceRolls" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="32" TextColor="White" />

    <Label x:Name="diceAmount" HorizontalOptions="Center" VerticalOptions="EndAndExpand" FontSize="24" TextColor="White" />
    
    <Stepper x:Name="stpCount" Minimum="1" Maximum="6" Margin="20" HorizontalOptions="Center" />
    
    <Button x:Name="btnRoll" Text="Roll" FontSize="42" HeightRequest = "150" BackgroundColor="#96C0CE" TextColor="#525564"/>
    
    <Button x:Name="btnHistory" Text="History" BackgroundColor="#C25B56" TextColor="#525564" />

  </StackLayout>
</ContentPage>